<div class="ludic-form-group {{groupclass}}" data-type="filepicker">

<label for="{{id}}"{{#labelclass}} class="{{labelclass}}"{{/labelclass}}>
    {{label}}
    {{#required}}
        {{#pix}}req, core, {{# str }}error-required, format_ludic{{/ str }}{{/pix}}
    {{/required}}
 </label>

    {{#previewsrc}}
    <div class="ludic-filepicker-img-preview" data-action="toggleFilepicker">
        <img src="{{previewsrc}}">
        {{#pix}}t/editinline, core, {{# str }}edit, format_ludic{{/ str }}{{/pix}}
    </div>
    {{/previewsrc}}

    <div class="ludic-filepicker-container" data-options="{{options}}">
        {{{content}}}
    </div>

</div>

