<div class="ludic-form-tabs-container">
{{#tabs}}
    <input type="radio" name="form-tabs" id="form-tabs-{{tabid}}" value="{{tabid}}" {{checked}}></input>
    <div class="form-tab">
        <div class="form-tab-menu">
        {{#menutabs}}
            <label class="{{manutabclasses}}" for="form-tabs-{{menutabid}}">{{menutabname}}</label>
        {{/menutabs}}
        </div>
        <div class="form-tab-body">
            {{{body}}}
        </div>
    </div>
{{/tabs}}
</div>
