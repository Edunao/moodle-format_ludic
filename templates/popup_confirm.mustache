<div id="{{popupid}}" {{#selectorid}}for="{{selectorid}}"{{/selectorid}} class="format-ludic ludic-popup">

    <div class="popup-header">
        <h2>{{title}}</h2>
        <button type="button" class="close-ludic-popup"  data-action="closeClosestPopup">
            {{#pix}}close-button, format_ludic, {{#str}}close-button-title, format_ludic{{/str}}{{/pix}}
        </button>
    </div>

    <div class="popup-content">
        {{{content}}}
    </div>

    <div class="confirmation-buttons">
        <button class="confirmation-button confirm" data-action="{{action}}"
            {{#link}} data-link="{{link}}"{{/link}}
            {{#itemid}} data-itemid="{{itemid}}"{{/itemid}}
            {{#selectorid}}data-selectorid="{{selectorid}}"{{/selectorid}}
        >
            {{#str}}confirmation-button-confirm, format_ludic{{/str}}
        </button>
        <button class="confirmation-button cancel" data-action="closeClosestPopup">
            {{#str}}confirmation-button-cancel, format_ludic{{/str}}
        </button>
    </div>

</div>