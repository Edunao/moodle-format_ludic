<div id="{{selectorid}}" class="item {{modname}} {{skintype}} {{itemtype}} {{itemtype}}-{{order}} child"
     data-id="{{id}}"
     data-type="{{itemtype}}"
     data-order="{{order}}"
    {{#parentid}} data-parentid="{{parentid}}"{{/parentid}}
    {{#skinid}} data-skinid="{{skinid}}"{{/skinid}}
    {{#skintype}} data-skintype="{{skintype}}"{{/skintype}}

    {{#action}} data-action="{{action}}"{{/action}}
    {{#link}} data-link="{{link}}"{{/link}}
>

    <div class="item-icon" style="background-image: url('{{iconsrc}}')" aria-label="{{iconalt}}"></div>
    <div class="item-title">
        {{#link}}<a href="{{link}}">{{/link}}
            {{title}}
        {{#link}}</a>{{/link}}
    </div>

    {{! Item content (for label). }}
    {{#content}}
        <div class="label-content-container">
            {{{content}}}
        </div>
    {{/content}}
</div>
