{{#css}}<style type="text/css">{{{css}}}</style>{{/css}}
<div id="{{skinid}}" class="full-tile skin skin-type-{{skintype}}{{#classes}} {{class}}{{/classes}}">

    <div class="sub-tile skin-tile" >
        <div class="skin-img-container viewmode-{{viewmode}}">
            {{#images}}
                <div class="skin-img{{#class}} {{class}}{{/class}}" style="background-image: url({{imgsrc}});{{imgcss}}" aria-label="{{imgalt}}"></div>
            {{/images}}
        </div>
        {{#texts}}
            <div class="skin-text{{#class}} {{class}}{{/class}}">{{{text}}}</div>
        {{/texts}}
        {{#hiddentexts}}
        <div class="skin-text skin-hidden-text {{#class}} {{class}}{{/class}}">{{{text}}}</div>
        {{/hiddentexts}}
        {{#emptydiv}}
            <div class="skin-empty-div div-{{number}}"></div>
        {{/emptydiv}}
    </div>

    {{#extrahtml}}
    <div class="skin-extra-html {{{classes}}}">
        {{{content}}}
    </div>
    {{/extrahtml}}

    <div class="sub-tile title-tile">
        <div class="skin-text" title="{{title}}">{{title}}</div>
    </div>

</div>
