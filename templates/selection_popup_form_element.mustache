<div class="ludic-form-group display-selection-popup {{groupclass}}"
     data-selectorid="{{id}}"
     data-action="selectAndUpdateInput"
     data-itemid="{{itemid}}"
     data-itemcontroller="{{itemcontroller}}"
     data-itemaction="{{itemaction}}"
     data-title="{{popuptitle}}"
>

    <label for="{{id}}"{{#labelclass}} class="{{labelclass}}"{{/labelclass}}>
        {{label}}
        {{#required}}
            {{#pix}}req, core, {{# str }}error-required, format_ludic{{/ str }}{{/pix}}
        {{/required}}
     </label>

    <div id="{{id}}-overview"
        class="selection-overview"
        {{#multiple}}multiple {{/multiple}}
        {{#autofocus}}autofocus {{/autofocus}}
        {{#disabled}}disabled {{/disabled}}
        {{#required}}required{{/required}}
    >
        <div class="overview-img-container" style="background-image:url({{imgsrc}})" aria-label="{{imgalt}}"></div>
        <div class="overview-txt-container">
        <div class="skin-title">{{skintitle}}</div>
        <div class="skin-description">{{skindescription}}</div>
        </div>
    </div>
    {{> format_ludic/hidden_form_element }}

</div>



