<div id="ludic-main-container" class="single-section-view">

    <div class="course-view card">
        <div class="card-body">
            {{{headerbar}}}

            {{#globaldescription}}
                <div id="global-description" class="ludic-container global-description">
                    {{{globaldescription}}}
                </div>
            {{/globaldescription}}

            {{#globalcoursemodules}}
                <div class="ludic-container general-activities">
                    {{{globalcoursemodules}}}
                </div>
            {{/globalcoursemodules}}
        </div>
    </div>

    <div class="section-view card">
        <div class="card-body">
            {{#showsectiondiv}}
            <div class="section-container ludic-container{{#description}} has-description{{/description}}">
                {{#section}}
                <div id="section-block" class="ludic-container section-block">
                    {{{section}}}
                </div>
                {{/section}}
                {{#description}}
                <div id="section-description" class="ludic-container section-description">
                    {{{description}}}
                </div>
                {{/description}}
            </div>
            {{/showsectiondiv}}

            <div class="coursemodules-container ludic-container container-parents ">
                {{{coursemodules}}}

                {{^coursemodules}}
                <div class="section-no-cm">
                {{#str}}section-no-cm, format_ludic{{/str}}
                </div>
                {{/coursemodules}}
            </div>
        </div>
    </div>

</div>