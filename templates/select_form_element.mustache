<div class="ludic-form-group {{groupclass}}" data-type="select">

    <label for="{{id}}"{{#labelclass}} class="{{labelclass}}"{{/labelclass}}>
        {{label}}
        {{#required}}
            {{#pix}}req, core, {{# str }}error-required, format_ludic{{/ str }}{{/pix}}
        {{/required}}
    </label>
    {{#hasdescription}}
        <div id="{{id}}-desc" class="select-description">
            {{#options}}
                <small for="{{value}}" class="option-description{{#selected}} visible{{/selected}}">{{description}}</small>
            {{/options}}
        </div>
    {{/hasdescription}}

    <select
        id="{{id}}"
        {{#name}}name="{{name}}" {{/name}}
        {{#class}}class="{{class}}" {{/class}}
        {{#size}}size="{{size}}" {{/size}}
        {{#multiple}}multiple {{/multiple}}
        {{#autofocus}}autofocus {{/autofocus}}
        {{#disabled}}disabled {{/disabled}}
        {{#readonly}}readonly {{/readonly}}
        {{#required}}required{{/required}}
    >
        {{#options}}
            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{name}}</option>
        {{/options}}
    </select>
</div>

